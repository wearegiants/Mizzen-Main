<div id="index" class="fs-grid fs-grid-fluid">

  <!-- Hero -->
  <div class="home-carousel">
    <div class="carousel">
      <div class="carousel__slide" data-shade="dark">
        <div class="home__hero hero hero--wh bg--black relative wallpaper" data-background-options='{"source":"https://dl.dropboxusercontent.com/u/2280055/Mizzen/index-slide-1-desktop.jpg"}'>
          <div class="centered centered--full">
            <div class="fs-row">
              <div class="fs-cell fs-all-full">
                <div class="text-right">
                  <h1 class="color--blue">DIAMOND IN<br> THE SCRUFF</h1>
                  <a href="#" class="btn btn--primary bg--white color--blue">Shop the Norfolk</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel__slide" data-shade="light">
        <div class="home__hero hero hero--wh bg--black relative wallpaper" data-background-options='{"source":"https://dl.dropboxusercontent.com/u/2280055/Mizzen/Chinos_2048x2048.jpg"}'>
          <div class="centered centered--full">
            <div class="fs-row">
              <div class="fs-cell fs-all-full">
                <div class="text-right">
                  <h1 class="color--blue">DIAMOND IN<br> THE SCRUFF</h1>
                  <a href="#" class="btn btn--primary bg--white color--blue">Shop the Norfolk</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr class="invisible">

  <!-- Performance Tag -->

  <div class="home__performance">
    <div class="fs-row"> 
      <div class="fs-cell fs-lg-10 fs-lg-push-1 fs-md-4 fs-md-push-1 fs-sm-3">
        <div class="text-center">
          <h2 class="color--blue">Performance Fabric Menswear</h2>
          <p>Our performance fabric apparel has the traditional look of<br> menswear, but feels like the most comfortable athletic gear.</p>
        </div>
      </div>
    </div>
  </div>

  <hr class="invisible">

  <!-- Shop Section -->

  <div class="home__shop" style="display: none;">
    <div class="fs-row">
      <div class="home__shop-thumb fs-cell fs-lg-full fs-md-full fs-sm-full relative">
        <div class="home__shop-image hero hero--sm relative wallpaper" data-background-options='{"source":"{{ shop_1_image }}"}'>
          <a href="#" class="covered"></a>
          <div class='centered text-center'>
            <span href="#" class="btn bg--blue color--white">{{ shop_1 }}</span>
          </div>
        </div>
      </div>
      <hr class="invisible compact fs-cell fs-all-full">
      <div class="home__shop-thumb fs-cell fs-lg-half fs-md-full fs-sm-full relative">
        <a href="#" class="covered"></a>
        <div class="home__shop-image hero hero--xs relative wallpaper" data-background-options='{"source":"{{ shop_3_image }}"}'>
          <div class='centered text-center'>
            <span href="#" class="btn bg--blue color--white">{{ shop_3 }}</span>
          </div>
        </div>
      </div>
      <hr class="invisible compact fs-cell fs-lg-hide fs-md-hide fs-sm-3">
      <div class="home__shop-thumb fs-cell fs-lg-half fs-md-full fs-sm-full relative">
        <a href="#" class="covered"></a>
        <div class="home__shop-image hero hero--xs relative wallpaper" data-background-options='{"source":"{{ shop_4_image }}"}'>
          <div class='centered text-center'>
            <span href="#" class="btn bg--blue color--white">{{ shop_4 }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr class="invisible">

